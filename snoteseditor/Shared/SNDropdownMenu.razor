<div class="dropdown">
    <button class="btn btn-outline-primary "  type="button" @onclick="ToggleDropdown">
        <span class="bi bi-caret-down"/>
    </button>

    
    <div class="dropdown-content p-1" style="@(isDropdownOpen ? "display: block;" : "display: none;") border-radius: 5px;">
        @ChildContent
    </div>
</div>

@code {
   
    [Parameter] public RenderFragment ChildContent { get; set; }

    [Parameter] 
    public bool isDropdownOpen { get; set; } = false;

    private void ToggleDropdown()
    {
        isDropdownOpen = !isDropdownOpen;
    }
}
